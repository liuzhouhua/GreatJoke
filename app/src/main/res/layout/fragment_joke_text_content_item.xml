<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/card_view_text_content"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/more"
                android:textSize="16sp"
                android:id="@+id/text_content_joke_title"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_content_joke_content"
                android:layout_marginTop="10dp"
                android:text="@string/setting"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="1dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:contentDescription="@null"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_content_joke_collect"
                    android:src="@drawable/ic_collect_indigo_24dp"/>
                
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_content_joke_agree"
                        android:src="@drawable/ic_agree_24dp"
                        android:contentDescription="@null"
                        android:layout_marginEnd="5dp"
                        android:layout_toStartOf="@id/text_content_joke_agree_count"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12345"
                        android:layout_marginEnd="40dp"
                        android:id="@+id/text_content_joke_agree_count"
                        android:layout_toStartOf="@id/text_content_joke_disagree"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_content_joke_disagree"
                        android:src="@drawable/ic_disagree_24dp"
                        android:layout_marginEnd="5dp"
                        android:contentDescription="@null"
                        android:layout_toStartOf="@id/text_content_joke_disagree_count"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12345"
                        android:layout_marginEnd="40dp"
                        android:id="@+id/text_content_joke_disagree_count"
                        android:layout_toStartOf="@id/text_content_joke_share"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@null"
                        android:id="@+id/text_content_joke_share"
                        android:src="@drawable/ic_share_24dp"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>


</android.support.v7.widget.CardView>